<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/d_8">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background"
        app:cardElevation="@dimen/d_8"
        android:layout_margin="@dimen/d_8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d_8">

            <TextView
                android:id="@+id/tv_head_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question"
                android:textSize="@dimen/s_18"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/tv_question"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_question" />

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/d_8"
                android:textSize="@dimen/s_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_head_question"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="My question here" />

            <TextView
                android:id="@+id/tv_head_correct_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correct_answer"
                android:textSize="@dimen/s_18"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/tv_correct_answer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_correct_answer" />

            <TextView
                android:id="@+id/tv_correct_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/d_8"
                android:textSize="@dimen/s_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_head_correct_answer"
                app:layout_constraintTop_toBottomOf="@+id/tv_question"
                tools:text="Here correct answer" />

            <TextView
                android:id="@+id/tv_head_my_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_answer"
                android:textSize="@dimen/s_18"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/tv_my_answer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_my_answer" />

            <TextView
                android:id="@+id/tv_my_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/d_8"
                android:textSize="@dimen/s_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_head_my_answer"
                app:layout_constraintTop_toBottomOf="@+id/tv_correct_answer"
                tools:text="Here my answer" />

            <TextView
                android:id="@+id/tv_head_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score"
                android:textSize="@dimen/s_18"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/tv_score"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_score" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/d_8"
                android:textSize="@dimen/s_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_head_score"
                app:layout_constraintTop_toBottomOf="@+id/tv_my_answer"
                tools:text="My score" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>